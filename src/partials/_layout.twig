        <script>
            $(document).ready(function() {
                $('.image').hover(
                    function() {
                        // Mouse enter
                        $(this).find('.default-img').css('opacity', '0');
                        $(this).find('.hover-img').css('opacity', '1');
                    },
                    function() {
                        // Mouse leave
                        $(this).find('.default-img').css('opacity', '1');
                        $(this).find('.hover-img').css('opacity', '0');
                    }
                );
            });
        </script>

        <script>
            $(document).ready(function() {
                // Open modal when .show-size-guide is clicked
                $('.show-size-guide').on('click', function(e) {
                    e.preventDefault();
                    $('#sizeGuideModal').addClass('active');
                    $('body').addClass('modal-open');
                });
                
                // Close modal when clicking the X button
                $('.modal-close').on('click', function() {
                    $('#sizeGuideModal').removeClass('active');
                    $('body').removeClass('modal-open');
                });
                
                // Close modal when clicking the overlay (but not the content)
                $('.modal-overlay').on('click', function(e) {
                    if (e.target === this) {
                        $(this).removeClass('active');
                        $('body').removeClass('modal-open');
                    }
                });
                
                // Close modal with Escape key
                $(document).on('keydown', function(e) {
                    if (e.key === 'Escape' && $('#sizeGuideModal').hasClass('active')) {
                        $('#sizeGuideModal').removeClass('active');
                        $('body').removeClass('modal-open');
                    }
                });
            });
        </script>
